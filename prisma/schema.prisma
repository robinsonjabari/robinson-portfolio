generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Building {
  id        Int      @id @default(autoincrement())
  name      String
  location  Location @relation(fields: [locationId], references: [id])
  locationId Int
  parkingLots ParkingLot[]
}

model Location {
  id        Int      @id @default(autoincrement())
  name      String
  buildings Building[]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
}

model ParkingLot {
  id        Int      @id @default(autoincrement())
  name      String
  building  Building @relation(fields: [buildingId], references: [id])
  buildingId Int
}
